{
  // 파일 저장 시 수행할 코드 작업을 설정합니다. 여기서는 import 구문을 정리합니다.
  "editor.codeActionsOnSave": {
    "source.organizeImports": "explicit"
  },

  // 파일을 저장할 때 사용할 기본 포매터를 설정합니다. 여기서는 Prettier를 사용합니다.
  "editor.defaultFormatter": "esbenp.prettier-vscode",

  // 파일을 저장할 때 자동으로 포맷을 맞추는 옵션입니다. 이는 true로 설정되어 있어, 저장 시 포맷이 적용됩니다.
  "editor.formatOnSave": true,

  // 에디터에서 지정된 열(여기서는 120열)에 눈금선을 표시합니다. 코드 길이 제한을 시각적으로 나타냅니다.
  "editor.rulers": [120],

  // ESLint를 위한 노드 경로를 설정합니다. .yarn/sdks로 설정되어 있습니다.
  "eslint.nodePath": ".yarn/sdks",

  // ESLint에 사용할 패키지 매니저를 지정합니다. 여기서는 yarn을 사용합니다.
  "eslint.packageManager": "yarn",

  // ESLint가 검증할 언어나 프레임워크를 나열합니다. javascript, javascriptreact, typescript, typescriptreact가 포함됩니다.
  "eslint.validate": ["javascript", "javascriptreact", "typescript", "typescriptreact"],

  // 파일을 저장할 때 라인 끝의 불필요한 공백을 자동으로 제거합니다.
  "files.trimTrailingWhitespace": true,

  // JavaScript에서 모듈 import 시 사용할 경로 유형을 지정합니다. 프로젝트 상대 경로를 사용합니다.
  "javascript.preferences.importModuleSpecifier": "project-relative",

  // JavaScript 코드에서 사용할 따옴표 스타일을 지정합니다. 작은따옴표('single')를 사용합니다.
  "javascript.preferences.quoteStyle": "single",

  // Jest runner에서 Yarn Plug'n'Play 지원을 활성화합니다.
  "jestrunner.enableYarnPnpSupport": true,

  // Jest runner에서 사용할 Yarn PnP 명령어 버전을 지정합니다. yarn-3.2.3.cjs를 사용합니다.
  "jestrunner.yarnPnpCommand": "yarn-3.2.3.cjs",

  // Prettier의 설정 파일 경로를 지정합니다. 프로젝트 루트의 .prettierrc 파일을 사용합니다.
  "prettier.configPath": "./.prettierrc",

  // Prettier 모듈의 경로를 설정합니다. .yarn/sdks/prettier/index.js로 설정되어 있습니다.
  "prettier.prettierPath": ".yarn/sdks/prettier/index.js",

  // 검색에서 제외할 파일 패턴을 지정합니다. .pnp.*와 .yarn 디렉토리가 제외됩니다.
  "search.exclude": {
    "**/.pnp.*": true,
    "**/.yarn": true
  },

  // TypeScript 버전을 워크스페이스의 버전으로 사용할지 여부를 묻는 옵션입니다.
  "typescript.enablePromptUseWorkspaceTsdk": true,

  // TypeScript에서 모듈 import 시 사용할 경로 유형을 지정합니다. 프로젝트 상대 경로를 사용합니다.
  "typescript.preferences.importModuleSpecifier": "project-relative",

  // TypeScript 코드에서 사용할 따옴표 스타일을 지정합니다. 작은따옴표('single')를 사용합니다.
  "typescript.preferences.quoteStyle": "single",

  // TypeScript 서비스를 위한 TypeScript 버전의 경로를 지정합니다. .yarn/sdks/typescript/lib로 설정되어 있습니다.
  "typescript.tsdk": ".yarn/sdks/typescript/lib"
}
